<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FF1D4463">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#06a399"
        android:text="@string/modesave"
        android:id="@+id/button"
        android:onClick="Iss"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/numberPicker4"
        android:layout_alignEnd="@+id/numberPicker4"
        android:layout_alignLeft="@+id/numberPicker3"
        android:layout_alignStart="@+id/numberPicker3"
        android:layout_marginBottom="8dp"
        />





<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text"
    android:text=""
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="161dp"

    />


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:scrollbarSize="5dp"
        android:id="@+id/numberPicker"
        android:layout_above="@+id/textView4"
        android:layout_toLeftOf="@+id/text"
        android:layout_toStartOf="@+id/text"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker2"
        android:layout_alignTop="@+id/numberPicker"
        android:layout_toRightOf="@+id/numberPicker"
        android:layout_toEndOf="@+id/numberPicker"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker4"
        android:layout_alignTop="@+id/numberPicker3"
        android:layout_alignLeft="@+id/numberPicker2"
        android:layout_alignStart="@+id/numberPicker2"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker3"

        android:layout_marginBottom="39dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/numberPicker"
        android:layout_alignStart="@+id/numberPicker"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""


        android:id="@+id/textView"
        android:layout_above="@+id/numberPicker"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView2"

android:layout_centerHorizontal="true"
        android:layout_above="@+id/numberPicker4"
         />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/textView4"
        android:layout_above="@+id/numberPicker4"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
